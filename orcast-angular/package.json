{
  "name": "orcast-angular",
  "version": "1.0.0",
  "description": "ORCAST Multi-Agent Whale Research Platform - Angular Version",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:prod": "ng serve --configuration=production",
    "build": "ng build",
    "build:prod": "ng build --configuration=production",
    "build:analyze": "ng build --configuration=production --stats-json && npx webpack-bundle-analyzer dist/orcast-angular/stats.json",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless --code-coverage",
    "test:coverage": "ng test --code-coverage --watch=false",
    "e2e": "ng e2e",
    "e2e:ci": "ng e2e --configuration=ci",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "lint": "ng lint",
    "format": "prettier --write \"src/**/*.{ts,html,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss}\"",
    "deploy:staging": "ng build --configuration=production && firebase deploy --only hosting:staging",
    "deploy:prod": "ng build --configuration=production && firebase deploy --only hosting:production",
    "serve:prod-local": "ng build --configuration=production && npx http-server dist/orcast-angular -p 8080",
    "precommit": "npm run lint && npm run test:ci && npm run format:check",
    "audit:security": "npm audit --audit-level=moderate",
    "update:deps": "ng update @angular/core @angular/cli"
  },
  "keywords": [
    "orcast",
    "whale-research",
    "angular",
    "machine-learning",
    "marine-biology",
    "orca-detection"
  ],
  "author": "ORCAST Team",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.0.0",
    "@angular/cdk": "^18.0.0",
    "@angular/common": "^18.0.0",
    "@angular/compiler": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/forms": "^18.0.0",
    "@angular/google-maps": "^18.0.0",
    "@angular/material": "^18.0.0",
    "@angular/platform-browser": "^18.0.0",
    "@angular/platform-browser-dynamic": "^18.0.0",
    "@angular/router": "^18.0.0",
    "chart.js": "^4.4.0",
    "ng2-charts": "^6.0.1",
    "rxjs": "^7.8.0",
    "tslib": "^2.8.1",
    "zone.js": "~0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.0.0",
    "@angular/cli": "^18.0.0",
    "@angular/compiler-cli": "^18.0.0",
    "@types/google.maps": "^3.58.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "cypress": "^14.5.2",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.4.0"
  },
  "engines": {
    "node": ">=18.19.0",
    "npm": ">=9.0.0"
  }
}
